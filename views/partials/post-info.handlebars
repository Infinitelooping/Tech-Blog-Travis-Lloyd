<article class="post">
    <div class="title">
        <a target="_blank">{{title}}</a>
        <span class = "post-text">{{format_url post_url}}</span>
    </div>
    <div class="meta">
        {{vote_count}} point(s) by {{user.username}} on {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
    </div>
</article>